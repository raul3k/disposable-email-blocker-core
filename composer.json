{
    "name": "raul3k/disposable-email-blocker-core",
    "description": "Fast disposable/temporary email detection with PSL support, pattern matching, caching and whitelist",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Raul",
            "homepage": "https://github.com/raul3k"
        }
    ],
    "keywords": [
        "disposable",
        "email",
        "temporary",
        "validation",
        "spam",
        "burner",
        "throwaway",
        "tempmail"
    ],
    "require": {
        "php": "^8.1",
        "jeremykendall/php-domain-parser": "^6.4",
        "ext-intl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "psr/cache": "For PSR-6 cache adapter support",
        "psr/simple-cache": "For PSR-16 cache adapter support"
    },
    "bin": [
        "bin/update-domains"
    ],
    "autoload": {
        "psr-4": {
            "Raul3k\\BlockDisposable\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raul3k\\BlockDisposable\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "quality": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable"
}
